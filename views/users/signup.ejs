<head>
    <link rel="stylesheet" href="/css/signup.css">
</head>

<% layout("/layouts/boilerplate") %>

<h3>Signup on Cinetracker</h3>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation">
            <div class="mb-3">
                <input name="username" type="text" id="username" class="form-control" placeholder="user" required>
            </div>
            <div class="mb-3">
                <input name="email" type="email" id="email" class="form-control" placeholder="name@example.com" required>
                <label for="email" class="form-label">Email address</label>
                <div class="invalid-feedback">
                    Please enter a valid email.
                </div>
            </div>
            <div class="mb-3">
                <input name="password" type="password" id="password" class="form-control" placeholder="Password" required>
                <label for="password" class="form-label">Password</label>
                <div class="invalid-feedback">
                    Please enter a password.
                </div>
            </div>
            <div class="text-center"> <!-- Center the button -->
                <button class="btn btn-dark" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
