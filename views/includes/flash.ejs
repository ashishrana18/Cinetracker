<% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center col-6 offset-3" role="alert">
        <!-- <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg> -->
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center col-6 offset-3" role="alert">
        <!-- <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg> -->
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>